<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="28sp" android:textColor="#000" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Attendance Manager" />
    <TextView android:textSize="20sp" android:textColor="#000" android:id="@id/text_notification" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Did you mark today's attendance?" />
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2.0"
